<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/randomNr1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="176dp"
        android:background="#72BBD3"
        android:text="7"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/randomNr4" />

    <Button
        android:id="@+id/randomNr2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="176dp"
        android:background="#72BBD3"
        android:text="7"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/randomNr3"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/randomNr3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="-15dp"
        android:layout_marginEnd="181dp"
        android:layout_marginBottom="176dp"
        android:background="#72BBD3"
        android:text="7"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/randomNr2" />

    <Button
        android:id="@+id/randomNr4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="176dp"
        android:background="#72BBD3"
        android:text="7"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/randomNr3" />

    <Button
        android:id="@+id/randomNr5"
        android:layout_width="148dp"
        android:layout_height="51dp"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="108dp"
        android:background="#72BBD3"
        android:text="15"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/randomNr6"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/randomNr6"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="108dp"
        android:background="#72BBD3"
        android:text="50"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/randomNr5" />

    <Button
        android:id="@+id/opAdd"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="20dp"
        android:background="#72BBD3"
        android:text="+"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/randomNr2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/opSubtract"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:background="#72BBD3"
        android:text="-"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/randomNr2"
        app:layout_constraintStart_toEndOf="@+id/opAdd" />

    <Button
        android:id="@+id/opMultiply"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:background="#72BBD3"
        android:text="*"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/randomNr3"
        app:layout_constraintStart_toEndOf="@+id/opSubtract" />

    <Button
        android:id="@+id/opDivide"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:background="#72BBD3"
        android:text="/"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/randomNr4"
        app:layout_constraintStart_toEndOf="@+id/opMultiply" />

    <Button
        android:id="@+id/opOpenBracket"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:text="("
        android:background="#72BBD3"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/randomNr1"
        app:layout_constraintStart_toEndOf="@+id/opDivide" />

    <Button
        android:id="@+id/opClosedBracket"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:background="#72BBD3"
        android:text=")"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/randomNr1"
        app:layout_constraintStart_toEndOf="@+id/opOpenBracket" />

    <TextView
        android:id="@+id/resultFromUser1"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/my_border"
        android:text="350"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultFromUser2"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/my_border"
        android:text="350"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentStateOfExpression"
        android:layout_width="266dp"
        android:layout_height="37dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/my_border"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"
        android:text="7 * 7 + (7/7)"
        android:textScaleX="1.1"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/opAdd"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/wantedNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:background="@drawable/my_border"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="330"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stopMojBroj"
        android:layout_width="233dp"
        android:layout_height="55dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FF0B0B"
        android:text="STOP"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/randomNr5" />

    <Button
        android:id="@+id/btnSubmitMojBroj"
        android:layout_width="236dp"
        android:layout_height="46dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="1dp"
        android:backgroundTint="#4CAF50"
        android:text="Submit"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stopMojBroj" />

    <Button
        android:id="@+id/deleteExpressionButton"
        android:layout_width="93dp"
        android:layout_height="42dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#D31020"
        android:text="Delete"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/opOpenBracket"
        app:layout_constraintStart_toEndOf="@+id/currentStateOfExpression" />

</androidx.constraintlayout.widget.ConstraintLayout>