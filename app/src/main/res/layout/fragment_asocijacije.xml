<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/A2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/my_border"
        android:text="A2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/A1" />

    <Button
        android:id="@+id/A3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/my_border"
        android:text="A3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/A2" />

    <EditText
        android:id="@+id/A"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/my_border"
        android:hint="A"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/A4" />

    <Button
        android:id="@+id/B2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/my_border"
        android:text="B2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B1" />

    <Button
        android:id="@+id/B3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/my_border"
        android:text="B3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B2" />

    <Button
        android:id="@+id/A4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/my_border"
        android:text="A4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/A3" />

    <Button
        android:id="@+id/B4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/my_border"
        android:text="B4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B3" />

    <EditText
        android:id="@+id/F"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/my_yellow_border"
        android:hint="KONACNO"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/C"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/my_border"
        android:hint="C"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/F" />

    <Button
        android:id="@+id/C4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/my_border"
        android:text="C4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/C" />

    <Button
        android:id="@+id/C3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/my_border"
        android:text="C3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/C4" />

    <Button
        android:id="@+id/C2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/my_border"
        android:text="C2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/C3" />

    <EditText
        android:id="@+id/D"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/my_border"
        android:hint="D"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/F" />

    <Button
        android:id="@+id/D4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/my_border"
        android:text="D4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/D" />

    <Button
        android:id="@+id/D3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/my_border"
        android:text="D3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/D4" />

    <Button
        android:id="@+id/D1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/my_border"
        android:text="D1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/D2" />

    <Button
        android:id="@+id/C1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/my_border"
        android:text="C1"
        app:layout_constraintEnd_toStartOf="@+id/D1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/C2" />

    <Button
        android:id="@+id/D2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/my_border"
        android:text="D2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/D3" />

    <EditText
        android:id="@+id/B"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/my_border"
        android:hint="B"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B4" />

    <Button
        android:id="@+id/A1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="210dp"
        android:background="@drawable/my_border"
        android:text="A1"
        app:layout_constraintBottom_toTopOf="@+id/F"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/B1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="210dp"
        android:background="@drawable/my_border"
        android:text="B1"
        app:layout_constraintBottom_toTopOf="@+id/F"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>